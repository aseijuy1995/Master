<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaa"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#f0f0f0"
        android:src="@drawable/flower1"
        android:visibility="invisible" />

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:mtf_hasFocus="true"
        app:mtf_image="@drawable/master_account_icon"
        app:mtf_labelColor="#ffffff">

        <EditText
            android:id="@+id/login_ed_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="@string/account"
            android:inputType="textVisiblePassword"
            android:maxLines="1" />


    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:mtf_hasFocus="true"
        app:mtf_image="@drawable/master_password_icon"
        app:mtf_labelColor="#ffffff">

        <EditText
            android:id="@+id/login_ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="@string/password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <CheckBox
        android:id="@+id/login_cb_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:text="@string/show_password"
        android:textColor="#fff" />

    <Button
        android:id="@+id/login_bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_frame_white_item"
        android:text="@string/log_in"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_bt_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_frame_white_item"
        android:text="@string/sign_in"
        android:textColor="#ffffff"
        android:textSize="20sp" />


</LinearLayout>











